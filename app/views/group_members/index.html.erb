<div class="page-header">
  <h1> <b> <%= @group.name%> </b> group members</h1>
</div>

<div class="page-footer">
  
 <%= link_to groups_path, class: 'btn btn-secondary float-right' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back To All Groups
  <% end %>
  
  <%= link_to new_group_group_member_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Add New Member
  <% end %>
</div>

<% @group_members.each do |group_member| %>
  <div class="user float-left" style="margin: 20px;padding:15px; text-align:center;width:200px" >
    <p>
        <div >
            <%= image_tag user_avatar(group_member.user, 100), class: "rounded-circle" %>
        </div>
      <strong><%=h group_member.user.first_name %> <%=h group_member.user.last_name %> </strong> <br>
      <%= link_to 'Remove from group', group_group_member_path(group_member.group.id,group_member.id), method: :delete, data: { confirm: 'Are you sure?' } %>    </p>
  </div>
<% end %>

<br>

