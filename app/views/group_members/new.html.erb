<div class="page-header">
  <h1> <b> <%= @group.name%> </b> new group member</h1>
</div>

<% for user in @users %>
  <div class="user float-left" style="margin: 20px;padding:15px; text-align:center;width:200px" >
    <p>
        <div >
            <% if user.avatar.attached? %>
                <%= image_tag user.avatar.variant(resize: "#{100}x#{100}!"), class: "rounded-circle" %>
            <% else %>
                  <%= image_tag("avatar1.png", :alt => "Avatar Image", :style => "height:100px;width:100px;") %>
            <%end%>
        </div>
      <b><%=h user.first_name %> <%=h user.last_name %> </b> <br>
      <%= link_to "Add to group", group_group_members_path(params[:group_id],:user_id => user), :method => :post %>
  </div>
<% end %>

<div style="margin-top: 15%;margin-bottom:10%;"> <br>  </div>
<hr>

<div class="col-sm-6 text-right">
  <%= link_to group_group_members_path, class: 'btn btn-primary' do %>
    Cancel
  <% end %>
</div>
