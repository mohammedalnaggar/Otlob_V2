<h1>New friendship</h1>

<% for user in @users %>

  <div class="user " style="margin: 2%x;padding:2%; text-align:center;width:200px ;float: left" >
    <p>
    
        <div >
           <% if user.avatar.attached? %>
           <image src="<%=(url_for(user.avatar))%>" ,
                style="height:100px;width:100px; border-radius: 50%;">
            <% else %>
                  <%= image_tag("avatar1.png", :alt => "Avatar Image", :style => "height:100px;width:100px;") %>
            <%end%>
        </div>
        
      <strong><%=h user.first_name %> <%=h user.last_name %> </strong> <br>
      <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>

<div style="clear:both;"></div>
<hr>


<%= render 'form', friendship: @friendship %>
