<h1>New friendship</h1>

<% for user in @users %>
  <div class="user float-left" style="margin: 20px;padding:15px; text-align:center;width:200px" >
    <p>
    
        <div >
           <% if user.avatar.attached? %>
                <%= image_tag user.avatar.variant(resize: "#{100}x#{100}!"), class: "rounded-circle" %>
            <% else %>
                  <%= image_tag("avatar1.png", :alt => "Avatar Image", :style => "height:100px;width:100px;") %>
            <%end%>
        </div>
        
      <strong><%=h user.first_name %> <%=h user.last_name %> </strong> <br>
      <%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %>
      <div class="clear"></div>
    </p>
  </div>
<% end %>

<div style="margin-top: 10%;margin-bottom:20%;"> <br>  </div>
<hr>


<%= render 'form', friendship: @friendship %>
